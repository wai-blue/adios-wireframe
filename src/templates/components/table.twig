{% set button1 %}
    {{ include('components/button.twig', {'cssClass': 'btn-sm btn-success', 'text': 'activate', 'icon': 'fas fa-plus'}) }}
{% endset %}

{% set button2 %}
    {{ include('components/button.twig', {'cssClass': 'btn-sm btn-danger', 'text': 'deactivate', 'icon': 'fas fa-plus'}) }}
{% endset %}
{% set buttons = [button1, button2] %}



<div class="shadow-sm">
  <div class="adios ui Table Container desktop">
    <div class="adios ui Table Header">
      <div class="Row ColumnNames">
        {% for column in columns %}
          <div class="cell unordered">
            {{ column['title'] }}
          </div>
        {% endfor %}
      </div>
      <div class="Row ColumnFilters">
        {% for column in columns %}
          <div class="cell unordered">
            {% if column['type'] == 'varchar' or column['type'] == 'int' or column['type'] == 'text' %}
              <input type="text" placeholder="üîç" required="required">
            {% elseif column['type'] == 'lookup' or column['type'] == 'active' %}
              <select required="required">
                <option value="">Zvoƒæte mo≈ænos≈•</option>
                {% for option in column['options'] %}
                  <option>{{ option }}</option>
                {% endfor %}
              </select>
            {% elseif column['type'] == 'activeButton' %}
            {% endif %}
          </div>
        {% endfor %}
      </div>
      <div class="adios ui Table Content">
        {% for rowNr in 1..minRowCount %}
          <div class="Row" onclick="{{ onclick }}">
            {% for column in columns %}
              {% if column['type'] == 'activeButton' %}
               <div class="cell">{{ random(buttons) }}</div>
              {% else %}
              <div class="cell">{{ _self.cellContent(config, column ?? '') }}</div>
              {% endif %}
            {% endfor %}
          </div>
        {% endfor %}
        {% for rowNr in 1..random(maxRowCount - minRowCount) %}
          <div class="Row" onclick="{{ onclick }}">
            {% for column in columns %}
              {% if column['type'] == 'activeButton' %}
               <div class="cell">{{ random(buttons) }}</div>
              {% else %}
              <div class="cell">{{ _self.cellContent(config, column ?? '') }}</div>
              {% endif %}
            {% endfor %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>