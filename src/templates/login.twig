    <link rel=stylesheet type='text/css' href='{{ config.rewriteBase }}/assets/css/skins/{{ config.skin }}.css' rel="stylesheet">
  {% endif %}
  <script>
    var _APP_URL = '{{ config.rewriteBase }}';
  </script>
</head>

<body>

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div
                class="col col-6 bg-login-image"
                style="background-image:url({{ config.rewriteBase }}/{{ config.loginSplashImage }})"
              >
              </div>
              <div class="col-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 mb-0">{{ config.projectName }}</h1>
                    <p class="mb-4">{{ config.brand.subtitle }}</p>
                  </div>
                  <form class="user" id="login_form" action="" method=POST>
                    <input type=hidden name='authUser' id='authUser' value='1'>

                    <div class="form-group">
                      <input
                        type=text
                        name='user'
                        id='user'
                        value='{{ user }}'
                        class='form-control form-control-user'
                        placeholder="Prihlasovacie meno"
                        autofocus
                        onkeypress='
                          if (event.keyCode == 13) {
                            document.getElementById("login_form").submit();
                          }
                        '
                      />
                    </div>
                    <div class="form-group no-space">
                      <input
                        type=password
                        name='pass'
                        id='pass'
                        value=''
                        class='form-control form-control-user'
                        placeholder="Heslo"
                        onkeypress='
                          if (event.keyCode == 13) {
                            document.getElementById("login_form").submit();
                          }
                        '
                      />
                    </div>
                    <div class="form-group ml-2 mt-2">
                      <div class="custom-control custom-checkbox small">
                        <input type='checkbox' id='keep_logged_in' class='custom-control-input' name='keep_logged_in' value=1 checked>
                        <label class="custom-control-label" for="keep_logged_in">
                          Zostať prihlásený
                        </label>
                      </div>
                    </div>
                    <a
                      href="javascript:void(0)"
                      onclick='document.getElementById("login_form").submit();'
                      class="btn btn-primary btn-user btn-block"
                    >
                      Prihlásiť sa
                    </a>
                    <div class="mt-4 text-center">
                      {{ config.build.version }}
                    </div>
                  </form>
                  {% if user != '' and not userAuthed %}
                    <div class='small mt-4 text-danger text-center'>
                      Neplatné prihlasovacie meno alebo heslo. Skúste znovu.
                    </div>
                  {% endif %}

                  <hr>
                  <div class="text-center">
                    <a class="small" href="PasswordReset">
                      Zabudol som heslo
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

</body>

</html>
